{
    "name": "get-json-patches",
    "version": "1.0.11",
    "description": "A function to compare two js objects and return a collection of json patches from the differences",
    "keywords": [
        "json",
        "patch",
        "http",
        "compare"
    ],
    "author": "RuntimeRascal <tommysimper@hotmail.com> (https://twitter.com/TommySimper)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/RuntimeRascal/get-json-patches.git"
    },
    "bugs": {
        "url": "https://github.com/RuntimeRascal/get-json-patches/issues"
    },
    "homepage": "https://github.com/RuntimeRascal/get-json-patches#readme",
    "engines": {
        "node": ">= 0.4.0"
    },
    "scripts": {
        "build": "node ./build.mjs",
        "test": "jest",
        "cover": "jest --coverage",
        "badges": "node ./updateBadges.mjs"
    },
    "jest": {
        "extensionsToTreatAsEsm": [
            ".ts",
            ".tsx"
        ],
        "collectCoverageFrom": [
            "src/**/*{.ts,.tsx}",
            "!(src/@types/*)"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 100,
                "lines": 90,
                "statements": 90
            }
        },
        "coverageReporters": [
            "json",
            [
                "text",
                {
                    "skipFull": true
                }
            ],
            "json-summary"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.tsx?$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ]
        }
    },
    "devDependencies": {
        "@types/jest": "^29.2.3",
        "chalk": "^5.1.2",
        "execa": "^6.1.0",
        "fs-extra": "^10.1.0",
        "istanbul-badges-readme": "^1.8.2",
        "jest": "^29.3.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.0.3",
        "typescript": "^4.9.3"
    }
}
